{
  "extends": [
    "airbnb",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error"
    ],
    "no-var": "warn",
    "require-jsdoc": "off"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "settings":{
    "react":{
      "version": "999.999.999" // resolves warning about React version
    }
  },
  "ignorePatterns": [
    "gulpfile.js",
    "node_modules/",
    "vendor/",
    ".vscode/",
    ".jekyll-cache/",
    "_site/"
  ]
}
