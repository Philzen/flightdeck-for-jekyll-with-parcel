{
  "name": "flightdeck-for-jekyll-with-parcel",
  "version": "0.1.1",
  "description": "Flightdeck is an opinionated Jamstack starter project for Jekyll with ParcelJS.",
  "author": "Ed Heltzel <ed@rainyday.media>",
  "license": "MIT",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "preinstall": "bundle install --path vendor/bundle",
    "start": "run-p dev:parcel dev:jekyll",
    "dev:jekyll": "bundle exec jekyll server --livereload",
    "dev:parcel": "run-p watch:assets",
    "watch:assets": "parcel watch './assets/images/**/*.*' ./assets/js/app.js ./assets/styles/style.scss --dist-dir ./_site/assets",
    "build": "run-s clean build:jekyll build:parcel",
    "build:jekyll": "bundle exec jekyll build JEKYLL_ENV=production",
    "build:parcel": "parcel build './assets/images/**/*.*' ./assets/js/app.js ./assets/styles/style.scss --dist-dir ./_site/assets",
    "clean": "./.scrub.sh site",
    "purge": "./.scrub.sh purge"
  },
  "devDependencies": {
    "@parcel/config-default": "^2.9.3",
    "@parcel/transformer-sass": "2.9.3",
    "browserlist": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.9.3",
    "sass": "^1.63.6",
    "sharp": "^0.31.3"
  }
}
